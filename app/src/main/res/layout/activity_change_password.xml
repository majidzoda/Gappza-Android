<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/bg_blur"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fira.gappza.ChangePasswordActivity"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/header_changePassowrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:clickable="true"
        >

        <Button
            android:id="@+id/backChangePasswordActivitytoSettingsActivity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/background_floating_material_light"
            android:drawableLeft="@drawable/back"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Changing password"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/header_changePassowrd"
        android:id="@+id/currentPasswordError_textViewchangePasswordActivity"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFC0303"
        />

    <EditText
        android:layout_below="@+id/currentPasswordError_textViewchangePasswordActivity"
        android:id="@+id/currentPassword_editTextchangePasswordActivity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Current password"
        android:background="@drawable/edit_text_style"
        android:layout_marginRight="16dp"
        android:layout_weight="0.9"/>

    <TextView
        android:layout_below="@+id/currentPassword_editTextchangePasswordActivity"
        android:id="@+id/newPasswordError_textViewchangePasswordActivity"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFC0303"
        />

    <EditText
        android:layout_below="@+id/newPasswordError_textViewchangePasswordActivity"
        android:id="@+id/newtPassword_editTextchangePasswordActivity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:hint="New passowrd"
        android:background="@drawable/edit_text_style"
        android:layout_marginRight="16dp"
        android:layout_weight="0.9"/>


    <TextView
        android:layout_below="@+id/newtPassword_editTextchangePasswordActivity"
        android:id="@+id/confirmPasswordError_textViewchangePasswordActivity"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFC0303"
        />

    <EditText
        android:layout_below="@+id/confirmPasswordError_textViewchangePasswordActivity"
        android:id="@+id/confirmPassword_editTextchangePasswordActivity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirm passwoed"
        android:background="@drawable/edit_text_style"
        android:layout_marginRight="16dp"
        android:layout_weight="0.9"/>

    <Button
        android:layout_margin = "16dp"
        android:id="@+id/submit_button_changePasswordActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/confirmPassword_editTextchangePasswordActivity"
        android:textAllCaps="false"
        android:background="@drawable/button_disabled"
        android:textColor="#fbf9f9"
        android:textSize="18dp" />

    <ProgressBar
        android:id="@+id/loading_progressBar_changePasswordActivity"
        style='style="?android:attr/progressBarStyleHorizontal"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>
